<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" 
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee                                                                         http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <servlet>
        <servlet-name>GlossaryServlet</servlet-name>
        <servlet-class>ru.alexkraynov.glossary.web.GlossaryServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AJAXServlet</servlet-name>
        <servlet-class>ru.alexkraynov.glossary.web.AJAXServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GlossaryServlet</servlet-name>
        <url-pattern>/servlet/GlossaryServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AJAXServlet</servlet-name>
        <url-pattern>/servlet/AJAXServlet</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
